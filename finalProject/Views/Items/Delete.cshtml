@model DataAccessLayer.Models.Item

@{
    ViewBag.Title = "Delete";
}

<h2>Edición</h2>
<h4>Item</h4>
<hr />

<div class="row">
    <div class="form-horizontal col-md-10">
        <div class="form-group">
            <label class="control-label col-md-2">Nombre: </label>
            @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Descripción: </label>
            @Html.EditorFor(m => m.description, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Categoría: </label>
            @Html.DropDownListFor(m => m.categoryId, (IEnumerable<SelectListItem>)ViewBag.categoryId
           , null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Fecha creación: </label>
            @Html.EditorFor(m => m.createdOn, 
                new { htmlAttributes = new { @class = "form-control", @readonly = "readonly"} })
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color col-md-offset-1">
                @Html.ActionLink("Regresar", "Index") |
                <button class="btn btn-primary" type="submit" formaction="@Url.Action("Edit")">Editar</button>
                <button class="btn btn-danger" type="submit" formaction="@Url.Action("Delete")">Borrar</button>
            </div>
        }
    </div>
</div>