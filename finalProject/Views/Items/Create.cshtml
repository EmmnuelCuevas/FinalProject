@model finalProject.Models.ItemViewModel

@{
    ViewBag.Title = "Create Item";
}

@using (Html.BeginForm("Create", "Items", FormMethod.Post, new { enctype = "multipart/form-data"} ))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-1"></div>

        <div class="form-horizontal col-md-10">

            <h4 class="thematic-title">Nuevo item</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">Nombre: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Item.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Descripción: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Item.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item.description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Categorias: </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Item.categoryId,
                        (IEnumerable<SelectListItem>)ViewBag.categories,
                        "Elige una categoría", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Item.categoryId,
                        "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Imagen: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FileBase, new { @class = "form-control", type = "file"})
                </div>
            </div>

            <div class="form-group">
                <div class="back-link-margin col-md-1 col-md-offset-1">
                    @Html.ActionLink("Regresar", "Index")
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Create item" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
