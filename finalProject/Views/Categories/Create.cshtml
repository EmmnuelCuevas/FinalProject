@model DataAccessLayer.Models.Category

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-1"></div>

        <div class="form-horizontal col-md-10">
            <h4 class="thematic-title">Nueva categoría</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-3">Nombre de la categoría: </label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="back-link-margin col-md-offset-2 col-md-1">
                    @Html.ActionLink("Regresar", "Index", "Items")
                </div>
                <div class="col-md-2">
                    <button class="btn btn-default" type="submit">Crear categoría</button>
                </div>
            </div>
        </div>
    </div>
}