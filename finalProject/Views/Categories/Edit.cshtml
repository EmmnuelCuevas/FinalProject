@model DataAccessLayer.Models.Category

@{
    ViewBag.Title = "Edit";
}

<h2 class="thematic-title">Editar Categoría</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal col-md-10">
            @Html.HiddenFor(m => m.id)
            @Html.HiddenFor(m => m.categoryId)
            <div class="form-group" style="margin-left: 0.8rem">
                <label class="control-label col-md-2">Nombre: </label>
                @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-actions no-color col-md-offset-1">
                <div class="back-link-margin col-md-1">
                    @Html.ActionLink("Regresar", "Index", "Items")
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary"
                            formaction="@Url.Action("Edit")">
                        Editar
                    </button>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-danger"
                            formaction="@Url.Action("Delete", new { id = Model.id })">
                        Borrar
                    </button>
                </div>
            </div>
        </div>
    </div>
}
