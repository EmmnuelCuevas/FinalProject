
@model finalProject.Models.LoginPageViewModel

@{
    Layout = "../Shared/_LoginLayout.cshtml";
}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active"> Sign In </h2>
        <h2 class="inactive underlineHover">Sign Up </h2>


        @*
        <!-- Login Form -->
